docker run -it \
           --rm \
           --net host \
           -v /etc/letsencrypt:/etc/letsencrypt \
           -v /var/lib/letsencrypt:/var/lib/letsencrypt \
           gzm55/certbot certonly --renew-by-default --manual --preferred-challenges dns-01 --text -d fieldkit.org "$@"

mv letsencrypt letsencrypt-old
cp -ar /etc/letsencrypt letsencrypt

echo Build a new image to use the new certificate.
