#!/bin/bash

sudo whoami

docker run -it \
           --rm \
           --net host \
           -v /etc/letsencrypt:/etc/letsencrypt \
           -v /var/lib/letsencrypt:/var/lib/letsencrypt \
           gzm55/certbot certonly --renew-by-default --manual --preferred-challenges=http -d code.conservify.org -d jitsi.conservify.org -d strapi.conservify.org "$@"

sudo mv letsencrypt letsencrypt-`date +"%Y-%m-%d_%H-%M-%S"`
sudo cp -ar /etc/letsencrypt letsencrypt

echo build a new image to use the new certificate.
